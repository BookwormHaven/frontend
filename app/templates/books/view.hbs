{{page-title 'View book details'}}

<div class='container'>
  <div class='container m-0 p-0'>
    <h3 class='mb-3'>Book Details</h3>
  </div>

  {{#if @model}}
    <div class='container mb-3 p-0'>
      <p>
        <h4>{{@model.title}}</h4>
      </p>
      <p>By {{@model.author.name}}</p>
      <p><span class='fw-bold'>Year: </span>{{@model.year}}</p>
      <p>
        <span class='fw-bold'>
          Publisher:
        </span>
        {{@model.publisher}}</p>
      <p class='fw-bold'>Author's Biography</p>
      {{#if @model.author.biography}}
        {{@model.author.biography}}
      {{else}}
        <span class='text-muted'>Biography not available.</span>
      {{/if}}
    </div>

    <div class='container m-0 p-0'>
      <button
        class='btn btn-warning me-1'
        {{on 'click' this.editBook}}
      >Edit</button>
      <button
        class='btn btn-danger'
        {{on 'click' (fn this.deleteBook @model.id)}}
      >Delete</button>
    </div>
  {{else}}
    <ErrorMessage @msg='Unable to load book.' />
    {{@this.id}}
  {{/if}}
</div>